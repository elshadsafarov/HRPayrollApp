@model List<Holding>

@{
    ViewData["Title"] = "Index";
}


<hr />
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Holding")">Holding</a></li>
        </ol>
    </nav>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="text-align: left;">Name</th>
                <th style="text-align: left;">Edit / Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var holding in Model)
            {
                <tr>
                    <td style="text-align: left;">@holding.Name</td>
                    <td style="text-align: left;"><a href="@Url.Action("Edit","Holding", new {id = holding.Id})">Edit</a> / <a href="@Url.Action("Delete","Holding", new {id = holding.Id})">Delete</a></td>
                </tr>

            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <a href="@Url.Action("Add","Holding")" style="float:left;" class="btn btn-success">Add Holding</a>
    </div>
    <div class="d-flex justify-content-center">
        <a asp-action="Index" style="float:left">Back to List</a>
    </div>
</div>

