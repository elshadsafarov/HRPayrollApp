@{
    Layout = "_Layout";
}
@model List<Employee>
<div class="container-fluid">
    <table class="table table-bordered table-striped" style="margin-left: 10%; margin-top: 2%; ">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Father Name</th>
                <th scope="col">Birthday</th>
                <th scope="col">Current Address</th>
                <th scope="col">Register District</th>
                <th scope="col">Passport Number</th>
                <th scope="col">Passort Expire Date</th>
                <th scope="col">Education</th>
                <th scope="col">Family Status</th>
                <th scope="col">Gender</th>
                <th scope="col">Photo</th>
                <th scope="col">Edit/Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Surname</td>
                    <td>@employee.FatherName</td>
                    <td>@employee.Birthday</td>
                    <td>@employee.CurrentAddress</td>
                    <td>@employee.RegisterDistrict</td>
                    <td>@employee.PassportNum</td>
                    <td>@employee.PassExpireDate</td>
                    <td>@employee.Education</td>
                    <td>@employee.FamilyStatus</td>
                    <td>@employee.Gender</td>
                    <td><img src="~/images/@employee.Photo" style="width:93px; height:87px" /></td>
                    <td><a href="@Url.Action("Edit","Employee",new { id=employee.Id})">Edit</a> / <a href="@Url.Action("Delete","Employee", new { id =employee.Id})">Delete</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a href="@Url.Action("Add","Employee")" style="float:right">Add</a>
</div>