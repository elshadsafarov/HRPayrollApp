
@{
    ViewData["Title"] = "Index";
}
@model BranchViewModel

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Company Name</th>
            <th>Is Head Office?</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Branches)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Company.Name</td>
                <td>@item.IsHead</td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Add","Branch")"  style="float:right;"class="btn btn-primary">Add Branch</a>

